<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Log In | Sign Up</title>
    <link rel="stylesheet" href="home.css" />
    <link rel="stylesheet" href="navbar.css" />
    <link rel="stylesheet" href="login.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Advent+Pro:500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header>
      <img class="logo" src="./checkology.png" alt="logo" />
      <nav>
        <ul class="nav_links">
          <li><a href="welcome.html">Welcome</a></li>
          <li><a href="login.html">Register</a></li>
          <li><a href="transactions.html">Transactions</a></li>
        </ul>
      </nav>
      <a class="cta" href="contact.html"><button>Contact</button></a>
    </header>

    <div class="login-page">
      <div class="form">
        <form class="login-form">
          <input type="text" placeholder="User Name" />
          <input type="text" placeholder="Password" />
          <button>Login</button>
          <p class="message">Not Registered?<a href="#"> Register here</a></p>
        </form>

        <form action="/user/signup" method="POST" class="register-form">
          <input name="" type="text" placeholder="First Name" />
          <input type="text" placeholder="Last Name" />
          <input type="text" placeholder="Username" />
          <input type="text" placeholder="Password" />
          <input type="text" placeholder="Check Password" />
          <input type="text" placeholder="Email" />
          <button>Create Account</button>
          <p class="message">Already Registered?<a href="#"> Login here</a></p>
        </form>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <script>
      $(".message a").click(function() {
        $("form").animate({ height: "toggle", opacity: "toggle" }, "slow");
      });
    </script>
  </body>
</html>
